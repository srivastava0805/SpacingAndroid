<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:padding="@dimen/default_16dp"
        android:id="@+id/textview_rowpouplarity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default_22sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_1dp"
        android:background="@color/black"
        android:layout_marginStart="@dimen/default_5dp"
        android:layout_marginEnd="@dimen/default_5dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_rowpouplarity_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>