<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_8dp">

    <HorizontalScrollView
        android:id="@+id/horizontalscrollview_rowproperty_images"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_rowproperty_imagecontainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>


    <TextView
        android:id="@+id/textview_rowproperty_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/textsize_default_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalscrollview_rowproperty_images" />

    <TextView
        android:id="@+id/textview_rowproperty_congiguration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default_20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_rowproperty_price" />

    <TextView
        android:id="@+id/textview_rowproperty_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/textsize_default_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_rowproperty_congiguration" />

    <TextView
        android:id="@+id/textview_rowproperty_propertysize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_rowproperty_address" />

    <TextView
        android:id="@+id/textview_rowproperty_propertyaccessory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_25dp"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_default_16sp"
        app:layout_constraintStart_toEndOf="@+id/textview_rowproperty_propertysize"
        app:layout_constraintTop_toBottomOf="@+id/textview_rowproperty_address" />
</androidx.constraintlayout.widget.ConstraintLayout>